<mah:MetroWindow
    x:Class="TanukiColiseum.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TanukiColiseum"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TanukiColiseum"
    Width="640"
    Height="480"
    d:DesignHeight="480"
    d:DesignWidth="640"
    mc:Ignorable="d">

    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  MahApps.Metro resource dictionaries. Make sure that all file names are Case Sensitive!  -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <!--  Theme setting  -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Brown.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mah:MetroWindow.Resources>

    <mah:MetroWindow.DataContext>
        <local:MainViewModel />
    </mah:MetroWindow.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <GroupBox
                Grid.Column="0"
                Margin="1"
                Header="共通設定">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="128" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="対局数" />
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="{Binding NumGames.Value}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="同時対局数" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding NumConcurrentGames.Value}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="ハッシュサイズ(MB)" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="{Binding HashMb.Value}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="開始手数" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Text="{Binding NumBookMoves.Value}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="開始局面ファイルパス" />
                    <Grid Grid.Row="4" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="{Binding SfenFilePath.Value}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            Command="{Binding OnSfenFilePathButton}">
                            ...
                        </Button>
                    </Grid>

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="NUMAノード数" />
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Text="{Binding NumNumaNodes.Value}" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="表示更新間隔(ms)" />
                    <TextBox
                        Grid.Row="6"
                        Grid.Column="1"
                        Text="{Binding ProgressIntervalMs.Value}" />
                </Grid>
            </GroupBox>

            <GroupBox
                Grid.Column="1"
                Margin="1"
                Header="思考エンジン設定">
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="128" />
                        <ColumnDefinition Width="128" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="思考エンジン1" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Text="思考エンジン2" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="exeファイルパス" />
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="{Binding Engine1FilePath.Value}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            Command="{Binding OnEngine1FilePathButton}">
                            ...
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="{Binding Engine2FilePath.Value}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            Command="{Binding OnEngine2FilePathButton}">
                            ...
                        </Button>
                    </Grid>

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="評価関数フォルダパス" />
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="{Binding Eval1FolderPath.Value}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            Command="{Binding OnEval1FolderPathButton}">
                            ...
                        </Button>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="{Binding Eval2FolderPath.Value}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            Command="{Binding OnEval2FolderPathButton}">
                            ...
                        </Button>
                    </Grid>

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="定跡手数" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Text="{Binding NumBookMoves1.Value}" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="2"
                        Text="{Binding NumBookMoves2.Value}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="定跡ファイル名" />
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Text="{Binding BookFileName1.Value}" />
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="2"
                        Text="{Binding BookFileName2.Value}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="思考ノード数" />
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Text="{Binding Nodes1.Value}"
                        ToolTip="0を指定した場合、思考ノード数を指定しません" />
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="2"
                        Text="{Binding Nodes2.Value}"
                        ToolTip="0を指定した場合、思考ノード数を指定しません" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="思考時間(ms)" />
                    <TextBox
                        Grid.Row="6"
                        Grid.Column="1"
                        Text="{Binding Time1.Value}"
                        ToolTip="0を指定した場合、思考時間を指定しません" />
                    <TextBox
                        Grid.Row="6"
                        Grid.Column="2"
                        Text="{Binding Time2.Value}"
                        ToolTip="0を指定した場合、思考時間を指定しません" />

                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="スレッド数" />
                    <TextBox
                        Grid.Row="7"
                        Grid.Column="1"
                        Text="{Binding NumThreads1.Value}" />
                    <TextBox
                        Grid.Row="7"
                        Grid.Column="2"
                        Text="{Binding NumThreads2.Value}" />

                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="BookEvalDiff" />
                    <TextBox
                        Grid.Row="8"
                        Grid.Column="1"
                        Text="{Binding BookEvalDiff1.Value}" />
                    <TextBox
                        Grid.Row="8"
                        Grid.Column="2"
                        Text="{Binding BookEvalDiff2.Value}" />

                    <TextBlock
                        Grid.Row="9"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="定跡の採択率を考慮する" />
                    <TextBox
                        Grid.Row="9"
                        Grid.Column="1"
                        Text="{Binding ConsiderBookMoveCount1.Value}" />
                    <TextBox
                        Grid.Row="9"
                        Grid.Column="2"
                        Text="{Binding ConsiderBookMoveCount2.Value}" />

                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="定跡の手数を無視する" />
                    <TextBox
                        Grid.Row="10"
                        Grid.Column="1"
                        Text="{Binding IgnoreBookPly1.Value}" />
                    <TextBox
                        Grid.Row="10"
                        Grid.Column="2"
                        Text="{Binding IgnoreBookPly2.Value}" />
                </Grid>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.Row="0" />
                <TextBox
                    Grid.Row="1"
                    VerticalContentAlignment="Top"
                    AcceptsReturn="True"
                    Text="{Binding Status.Value}" />
            </Grid>

            <Button
                Grid.Column="1"
                Width="32"
                Height="32">
                開始
            </Button>
        </Grid>
    </Grid>
</mah:MetroWindow>
